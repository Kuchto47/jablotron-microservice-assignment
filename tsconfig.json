{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "sourceMap": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "out",
        "experimentalDecorators": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "compileOnSave": true
}